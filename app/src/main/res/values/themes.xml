<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BxBlueTooth" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="background">@null</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BxBlueTooth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BxBlueTooth.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BxBlueTooth.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HomeConstraintLayoutItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">@dimen/homeLayoutButtonHeight</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="HomeButtonTextStyle">
        <item name="android:textSize">@dimen/layout_left_btn_size</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>



</resources>